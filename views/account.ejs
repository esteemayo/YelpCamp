<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="thumbnail">
                <h1><%= currentUser.fullName %> </h1>
                <% if (currentUser.avatar) { %>
                    <img src="/uploads/users/<%= currentUser.avatar %>" alt="<%= currentUser.fullName %>" title="<%= currentUser.fullName %>">
                    <% } else { %>
                    <img src="<%= currentUser.gravatar %>" alt="<%= currentUser.fullName %>" title="<%= currentUser.fullName %>">
                <% } %>
                <div class="caption">
                    <h5><b>First Name:</b> <%= currentUser.firstName %></h5>
                    <h5><b>Last Name:</b> <%= currentUser.lastName %></h5>
                    <h5><b>Username:</b> <%= currentUser.username %></h5>
                    <h5><b>Email Address:</b>
                        <span>
                            <a href="mailto:<%= currentUser.email %>"><%= currentUser.email %></a>
                        </span>
                    </h5>
                    <% const date = currentUser.createdAt.toLocaleString('en-us', { month: 'long', year: 'numeric' }); %>
                    <h5><b>Joined:</b> <time datetime="<%= currentUser.createdAt %>"><%= date %></time></h5>
                    <h5><b>Campgrounds:</b> <%= campgrounds.length %></h5>
                </div>
            </div>
            <br /><br />

            <div class="thumbnail">
                <h1 class="account__header">Your account settings</h1>
                <form action="/users/submit-user-data" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input class="form-control" type="text" name="firstName" id="firstName" value="<%= currentUser.firstName %>">
                    </div>

                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input class="form-control" type="text" name="lastName" id="lastName" value="<%= currentUser.lastName %>">
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" type="email" name="email" id="email" value="<%= currentUser.email %>">
                    </div>
                        
                    <div class="form-group">
                        <label for="avatar">Avatar</label>
                        <input class="form-control" type="file" name="avatar" id="avatar" accept="image/*">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Save settings</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-8">
            <h3>My campgrounds:</h3>
            <hr />
            <% if (campgrounds.length === 0) { %>
                <h3 class="text-center">No campground found</h3>
            <% } else { %>
                <% campgrounds.forEach(campground => { %>
                    <div class="col-md-4 col-sm-6">
                        <div class="thumbnail text-center">
                            <img class="campground-img" src="<%= campground.image %>" alt="<%= campground.name %>" title="<%= campground.name %>">
                            <div class="caption">
                                <h4><%= campground.name %></h4>
                            </div>
                            <p>
                                <a href="/campgrounds/<%= campground.slug %>" class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<% include ./partials/footer %>